<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   namespace="Trakker.Data"
                   assembly="Trakker.Data">

<class name="ProjectVersion" >
  <id name="Id">
    <generator class="identity" />
  </id>
  
  <property name="Name" />
  <property name="Description" />
  <property name="ReleaseDate" />
  <property name="ProjectId" />
  <property name="IsReleased" />
  <property name="SortOrder" />

  <many-to-one name="Project" class="Project" column="ProjectId" insert="false" update="false"/>

  <bag name="FixedTickets" table="TicketFixedOnVersion">
    <key column="VersionId" />
    <many-to-many column="TicketId" class="Ticket" />
  </bag>

  <bag name="FoundTickets" table="TicketFoundOnVersion">
    <key column="VersionId" />
    <many-to-many column="TicketId" class="Ticket" />
  </bag>


</class>

</hibernate-mapping>

