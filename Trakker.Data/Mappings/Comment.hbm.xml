<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
  xmlns="urn:nhibernate-mapping-2.2" namespace="Trakker.Data"
                   assembly="Trakker.Data">

<class name="Comment">
  <id name="Id">
    <generator class="identity" />
  </id>
  <property name="Body" />
  <property name="Created" />
  <property name="Modified" />
  <property name="TicketId" />
  <property name="UserId" />

  <one-to-one name="User" class="User" />
</class>

</hibernate-mapping>

