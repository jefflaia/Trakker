<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
  xmlns="urn:nhibernate-mapping-2.2" namespace="Trakker.Data"
                   assembly="Trakker.Data">

<class name="Ticket">
  <id name="Id">
    <generator class="identity" />
  </id>
  
  <property name="CategoryId" />
  <property name="Summary" />
  <property name="PriorityId" />
  <property name="Description" />
  <property name="Created" />
  <property name="DueDate" type="DateTime"/>
  <property name="StatusId" />
  <property name="ResolutionId" />
  <property name="IsClosed" />
  <property name="AssignedToUserId" />
  <property name="CreatedByUserId" />
  <property name="AssignedByUserId" />
  <property name="ProjectId" />
  <property name="KeyName" />

  <many-to-one name="Type" class="TicketType" column="CategoryId" insert="false" update="false"/>
  <many-to-one name="Priority" class="TicketPriority" column="PriorityId" insert="false" update="false"/>
  <many-to-one name="Status" class="TicketStatus" column="StatusId" insert="false" update="false"/>
  <many-to-one name="Resolution" class="TicketResolution" column="ResolutionId" insert="false" update="false"/>
  
</class>

</hibernate-mapping>

