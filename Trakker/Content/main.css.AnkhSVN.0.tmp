*{margin: 0px; padding: 0px;}
body{color: #353535; font-size: 12px; line-height: 1.4; font-family:"lucida grande",tahoma,verdana,arial,sans-serif;}

a{outline: none; text-decoration: none;} /* remove dotted line when clicking a link */
h1,h2,h3,h4,h5,h6{margin: 10px 0px 10px 0px;}


/* layout */
div#Header{width: 99%; padding: 5px 0.5%; border-bottom: 1px solid #b0b0b0; height: 35px; background:#eae8e8; background-image: url(/Content/Images/UI-Backgrounds.png);}
div#Header div.Right{float: right; width: 400px; margin-right: 20px;}
div#Header div.Right div{width: 100%; text-align: right;}

div#SubHeader{width: 100%; background-image:url(/Content/Images/UI-Backgrounds.png); background-position: 0px -49px; height: 30px; border-bottom: 1px solid #6b96ba;}
div#Content{ margin: 10px 2%; width: 96%; }

/* Navigation */
div.Nav{ margin: 17px 0px 0px 10px; padding: 0; display:block; width: 500px; float:left;}
div.Nav a.Hover{ border-width: 1px 1px 0px 1px; border-style: solid; border-color: #999; z-index:101; background-color: White;}
div.Nav li{	display:inline-block; list-style: none; border-width: 1px 1px 0px 1px;}
div.Nav li a{ color: #353535; background-color: transparent; position:relative; display: block; padding: 2px 10px 4px 10px; white-space: nowrap; z-index: 99; border-width: 1px 1px 0px 1px; border-style: solid; border-color: transparent;}
div.Nav li ul{ width: auto; margin:0px; padding: 0; position: absolute; display:none; z-index: 100; border: 1px solid #999; margin-top: -1px; }
div.Nav li ul li{ float: none; display:block; background-color: White; border-color:White;}
div.Nav li ul li a{	width: auto; background: white; color: #24313C; }
div.Nav li ul li a:hover{ background-color:#a4d6f5;}
div.Nav li ul li.Heading{font-weight: bold; padding:10px 5px 0px 5px;   border-bottom: 1px solid white; border-top: 1px solid white; display:block;}
div.Nav li ul li.Break{border-bottom: 1px dotted gray; width: 100%; height: 1px; padding: 5px 0px; }

div.SubNav{ margin: 7px 0px 0px 10px; padding: 0; display:block; width: 500px; float:left;}
div.SubNav a.Hover{  border-style: solid; border-color: #6b96ba;  background-color: White;}
div.SubNav a.Current{  border-style: solid; border-color: #6b96ba;  background-color: White;}
div.SubNav li{	display:inline-block; list-style: none; border-width: 1px 1px 0px 1px;}
div.SubNav li a{ color: #353535; background-color: transparent; position:relative; display: block; padding: 2px 10px 4px 10px; white-space: nowrap; z-index: 99; border-width: 1px 1px 0px 1px; border-style: solid; border-color: transparent;}

/* Forms */
form div.Row{float: left; width: 100%;}
form div.Row label{float:left; width: 150px;}
form div.Row select, textarea, input {border: 1px solid #BDC7D8; margin: 2px; padding: 2px; background-color:#FFFFFF;
background-image:url(Images/Field-Background.bmp); background-repeat:repeat-x;}
form div.Row select{float:left; width: 155px; }
form div.Row textarea{float:left; width: 500px;}
form div.Row input{float:left; width: 150px;}


/* UI Elements */
.UI-Shadow{-moz-box-shadow: 0px 2px 5px #222; -webkit-box-shadow: #222 0px 2px 5px;}
.UI-Hover{-moz-box-shadow: 0 0 3px #222; -webkit-box-shadow: #222 0 0 3px;}

/* UI Buttons */
button.UI-Button{float:left; margin: 2px 0px; color: inherit; display:inline-block; background: #fff url(/Content/Images/UI-Backgrounds.png) 0px -110px; height: 25px; 
line-height: 25px; border:1px solid #999; padding: 0px 5px 2px 5px; }
button.UI-Button:hover{background-color: #eee; -moz-box-shadow: 0 0 3px #aaa; -webkit-box-shadow: #aaa 0 0 3px;}
button.UI-Button:active{position:relative; top: 1px; }

button.UI-Button.UI-Border{-moz-border-radius:5px; -webkit-border-radius:5px;}
button.UI-Button.UI-Border-Left{-moz-border-radius:5px 0px 0px 5px; -webkit-border-radius:5px 0px 0px 5px; border-width: 1px 0px 1px 1px;}
button.UI-Button.UI-Border-Right{-moz-border-radius:0px 5px 5px 0px; -webkit-border-radius:0px 5px 5px 0px; position:relative; left: -1px;}
button.UI-Button.UI-Border-Center{border-width: 1px 0px 1px 1px;}
button.UI-Button.UI-Border-Top{-moz-border-radius:5px 5px 0px 0px; -webkit-border-radius:5px 5px 0px 0px;}
button.UI-Button.UI-Border-Bottom{-moz-border-radius:0px 0px 5px 5px; -webkit-border-radius:0px 0px 5px 5px;}




/* Pagination */
div.Pagination { height: 25px;}
div.Pagination a{  color: inherit; float:left; border: 1px solid #ccc;  padding: 2px 6px; margin: 1px; -moz-border-radius: 3px; -webkit-border-radius:3px; background-image: url(/Content/Images/UI-Button.png);}
div.Pagination a.Current{background-color: #EFEFEF; border: 1px solid #ccc; color: inherit; font-weight: bold;}
div.Pagination a:hover{border: 1px solid #999; color: inherit; -moz-box-shadow: 0 0 3px #aaa; -webkit-box-shadow: #aaa 0 0 3px;}
div.Pagination a:focus{background-position: 0px -30px; }
div.Pagination a.Current:hover{color:black;}







/* Comments */
div.Comment{float:left; width: 96%; border: 1px solid black; margin: 5px 2%;}
div.Comment div.UserInfo{float:left; width: 100px;}
div.Comment p.Body{float:left; width: auto;}






/***** TicketDetails *****/
#TicketDetails {float:left; width: 100%;}
#TicketDetails div.LeftContent{float:left; width: 70%;}
#TicketDetails div.LeftContent label{float:left; width: 150px;  margin: 3px 0px 3px 20px ;}
#TicketDetails div.LeftContent p.Value{float:left; width : 375px; margin: 3px 0px 3px 0px ;}

#TicketDetails div.RightContent{float:right; width: 26%;}
#TicketDetails div.RightContent label{float:left; width: 150px;  margin: 3px 0px 3px 20px ;}
#TicketDetails div.RightContent p.Value{float:left; width : 225px; margin: 3px 0px 3px 0px ; text-align: right;}
#TicketDetails h3.SubHeader{float:left; width: 100%;  border-bottom: 1px dashed #aaa; margin-top: 20px;}
#TicketDetails p.Description{float:left; margin-left: 20px;}

/***************************************************************************************************/
/**************************************** Generic Styling ******************************************/

/****** basic table styling  *****/
table{border-collapse:collapse; margin:10px 0px; border-bottom: 1px solid #bbb; width: 100%;}
table tr.Header {border: 1px solid #bbb; }
table tr{border-left: 1px solid #bbb; border-right: 1px solid #bbb;}
table tr:nth-child(odd){background: #eee; }
table tr td{ padding: 5px 10px; border-left: 1px solid #bbb;}
table tr td span.ColorBar{height: 10px; width: 5px; display:inline-block; margin-right: 5px;}
table tr th{ padding: 5px 10px; border-left: 1px solid #bbb; background:#e9e9e9 url(/Content/Images/UI-Backgrounds.png) repeat-x;}
